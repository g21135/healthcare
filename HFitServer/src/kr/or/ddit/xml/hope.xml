<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">
			
<sqlMap namespace="hope">
	
	<insert id="insert" parameterClass="hopeVO">
		INSERT INTO HopeVO VALUES (#mem_id#, #hope_purpose#, #hope_day#, #hope_time#, #hope_age#, #hope_gender#)
	
	</insert>
	
	<select id="getMemberHope" parameterClass="String" resultClass="hopeVO">
		select hope_purpose, hope_day, hope_time, hope_age, hope_gender from HopeVO where mem_id = #mem_id#
	</select>




</sqlMap>