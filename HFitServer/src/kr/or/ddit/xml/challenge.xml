<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="challenge">

	<select id="selectAll" resultClass="challengeVO">
		select * from challengevo
	</select>
	
	<select id="selectNum" resultClass="challengeVO" parameterClass="int">
		select * from challengevo where chall_no = #chall_no#
	</select>
	
	<insert id="insert" parameterClass="challengeVO">
		insert into challengevo values(challenge.nextval, #chall_name#, #chall_content#, #chall_photo#, #chall_start#, #chall_end#)
	</insert>
</sqlMap>