<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="match">

	<select id="selectTrainer" resultClass="matchVO" parameterClass="String">
		select trainer_id from matchvo where mem_id=#mem_id#
	</select>

	<select id="selectMember" resultClass="matchVO" parameterClass="matchVO">
		select mem_id from matchvo where trainer_id=#trainer_id#
	</select>

	<delete id="deleteMember" parameterClass="matchVO">
		delete matchvo where mem_id = #mem_id#
	</delete>

	
	<select id="selectMatch" resultClass="matchVO" parameterClass="matchVO">
	select m.trainer_id , m.mem_id , s.membership_startdate, s.membership_no ,v.mem_name
	from matchvo m , membershipvo s ,membervo v
	where s.mem_id = m.mem_id and s.mem_id = v.mem_id and m.trainer_id = #trainer_id#
	</select>

	
	<select id="selectAll" resultClass="matchVO">
		select * from matchvo 
	</select>
	
	<select id="getMatchList" resultClass="matchVO">
		select * from matchVO
	</select>
	
	<insert id="insertMatch" parameterClass="matchVO">
		insert into matchVO values(#trainer_id#, #mem_id#)
	</insert>


</sqlMap>
