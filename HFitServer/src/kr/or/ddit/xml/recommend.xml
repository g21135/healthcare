<!-- 추천 식단, 운동 -->
<sqlMap namespace = "recommend">
	<!-- 식단 -->
	<insert id = "insertRecomDiet" parameterClass = "recommendVO">
		insert into recommendvo(recom_num, div_code, recom_image, recom_content)
		values(#recom_num#, #div_code#, #recom_image#, #recom_content#)
	</insert>
	
	<update id = "updateRecomDiet" parameterClass = "recommendVO">
		update recommendvo set recom_num = #recom_num#,
							div_code = #div_code#,
							recom_image = #recom_image#,
					  where recom_content = #recom_content#
	</update>
	
	<delete id = "deleteRecomDiet" parameterClass = "recommendVO">
		delete from recommendvo where recom_num = #recom_num#
	</delete>
	
	<select id = "getAllRecomDietList" resultClass = "recommendVO" parameterClass="int">
		select * from recommendvo where div_code = #div_code#
	</select>
	
