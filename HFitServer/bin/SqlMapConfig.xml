<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	<!-- 
	DB와 연결하는 정보를 properties파일에 설정해 놓고 이 properties파일의
	내용을 읽어와 설정한다.
	 -->
	<properties resource="SqlMapConfig.properties" />
	
	<!-- ibatis를 처리하기 위한 환경설정 부분 -->
	<settings cacheModelsEnabled="true" enhancementEnabled="true"
		lazyLoadingEnabled="true" maxRequests="32" maxSessions="10"
		maxTransactions="5" useStatementNamespaces="true" />
	<!--useStatementNamespaces : 쿼리문 namespaces 작성 여부
	이 값을 true로 셋팅하면 sqlmap 이름과 statement 이름으로 구성된 전체 이름으로 매핑된 statement를 참조해야 한다.
	 -->
	 
	
	<!-- 
	VO클래스등의 이름이 패키지명까지 기술하면 길어지는데 이것을 간단히
	표시하기 위해서 alias를 지정할 수 있다.
	형식) <typeAlias alias="alias명" type="클래스의 풀네임"/>
	 -->
	<typeAlias alias="memVO" type="kr.or.ddit.vo.MemberVO" />
	<typeAlias alias="trainerVO" type="kr.or.ddit.vo.TrainerVO" />
	<typeAlias alias="cartVO" type="kr.or.ddit.vo.CartVO" />
	<typeAlias alias="boardVO" type="kr.or.ddit.vo.BoardVO" />
	<typeAlias alias="replyVO" type="kr.or.ddit.vo.ReplyVO" />
	<typeAlias alias="postVO" type="kr.or.ddit.vo.PostVO" />
	<typeAlias alias="applyVO" type="kr.or.ddit.vo.ApplyVO" />
	<typeAlias alias="diaryVO" type="kr.or.ddit.vo.DiaryVO" />
	<typeAlias alias="prodVO" type="kr.or.ddit.vo.ProdVO" />
	<typeAlias alias="hopeVO" type="kr.or.ddit.vo.HopeVO" />
	<typeAlias alias="challengeVO" type="kr.or.ddit.vo.ChallengeVO" />
	<typeAlias alias="checkVO" type="kr.or.ddit.vo.CheckVO" />
	<typeAlias alias="challApplyVO" type="kr.or.ddit.vo.ChallApplyVO" />
	<typeAlias alias="cardVO" type="kr.or.ddit.vo.CardVO" />
	<typeAlias alias="homeTrainingVO" type="kr.or.ddit.vo.HomeTrainingVO" />
	<typeAlias alias="membershipVO" type="kr.or.ddit.vo.MembershipVO" />
	<typeAlias alias="recommendVO" type="kr.or.ddit.vo.RecommendVO" />
	<typeAlias alias="videoVO" type="kr.or.ddit.vo.VideoVO" />
	<typeAlias alias="matchVO" type="kr.or.ddit.vo.MatchVO" />
	<typeAlias alias="openTalkVO" type="kr.or.ddit.vo.OpenTalkVO" />
	<typeAlias alias="talkAdminVO" type="kr.or.ddit.vo.TalkAdminVO" />
	<typeAlias alias="dealhistroyVO" type="kr.or.ddit.vo.DealHistoryVO" />
	<typeAlias alias="sampleVO" type="kr.or.ddit.vo.sampleVO" />
	<typeAlias alias="matchVO" type="kr.or.ddit.vo.MatchVO" />	
	<typeAlias alias="chartVO" type="kr.or.ddit.vo.ChartVO" />	
	<typeAlias alias="homeSubVO" type="kr.or.ddit.vo.HomeSubVO" />	
	<typeAlias alias="kcalVO" type="kr.or.ddit.vo.KcalVO" />	

<!-- 	<typeAlias alias="memVO" type="ibatis.member.vo.MemberVO"/> -->

	<!-- 
	DB와의 연결을 처리하는 부분
	SqlMapConfig.properties에 설정해 놓은 정보를 이용하여 구성한다.
	 -->
	<transactionManager type="JDBC">
		<dataSource type="SIMPLE">
		<!--
			각종 설정을 직접 기술해서 처리할 수도 있다. 
			<property name="JDBC.Driver" value="oracle.jdbc.driver.OracleDriver" />
		 -->
			<property name="JDBC.Driver" value="${driver}" />
			<property name="JDBC.ConnectionURL" value="${url}" />
			<property name="JDBC.Username" value="${username}" />
			<property name="JDBC.Password" value="${password}" />
		</dataSource>
	</transactionManager>
	
	<!-- 
	실제 처리할 SQL문은 xml문서로 따로 만든 후
	그 xml문서와 아래와 같이 연결하여 사용한다.
	형식) <sqlMap resource="경로명/파일명.xml"/> 
	-->
	<sqlMap resource="kr/or/ddit/xml/board.xml"/>
	<sqlMap resource="kr/or/ddit/xml/cart.xml"/>
	<sqlMap resource="kr/or/ddit/xml/post.xml"/>
	<sqlMap resource="kr/or/ddit/xml/reply.xml"/>
	<sqlMap resource="kr/or/ddit/xml/trainer.xml"/>
	<sqlMap resource="kr/or/ddit/xml/member.xml"/>
	<sqlMap resource="kr/or/ddit/xml/diary.xml"/>
	<sqlMap resource="kr/or/ddit/xml/prod.xml"/>
	<sqlMap resource="kr/or/ddit/xml/apply.xml"/>
	<sqlMap resource="kr/or/ddit/xml/hope.xml"/>
	<sqlMap resource="kr/or/ddit/xml/challenge.xml"/>
	<sqlMap resource="kr/or/ddit/xml/check.xml"/>
	<sqlMap resource="kr/or/ddit/xml/challApply.xml"/>
	<sqlMap resource="kr/or/ddit/xml/card.xml"/>
	<sqlMap resource="kr/or/ddit/xml/homeTr.xml"/>
	<sqlMap resource="kr/or/ddit/xml/membership.xml"/>
	<sqlMap resource="kr/or/ddit/xml/recommend.xml"/>
	<sqlMap resource="kr/or/ddit/xml/video.xml"/>
	<sqlMap resource="kr/or/ddit/xml/match.xml"/>
	<sqlMap resource="kr/or/ddit/xml/openTalk.xml"/>
	<sqlMap resource="kr/or/ddit/xml/talkAdmin.xml"/>
	<sqlMap resource="kr/or/ddit/xml/dealhistroy.xml"/>
	<sqlMap resource="kr/or/ddit/xml/homeSub.xml"/>
	<sqlMap resource="kr/or/ddit/xml/chart.xml"/>
	<sqlMap resource="kr/or/ddit/xml/kcal.xml"/>
	
	<!-- <sqlMap resource="ibatis/member/memberMain.xml"/> -->
	<!--여기에 등록된 쿼리만 찾는다-->
	
</sqlMapConfig>






