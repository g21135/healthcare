<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="reviewMainView" prefHeight="616.0" prefWidth="999.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kr.or.ddit.view.board.ReviewMainController">
   <center>
      <AnchorPane prefHeight="479.0" prefWidth="776.0" BorderPane.alignment="CENTER">
         <children>
            <Pagination fx:id="pagination" layoutX="23.0" layoutY="69.0" prefHeight="511.0" prefWidth="927.0" />
            <TableView fx:id="reviewTable" layoutX="43.0" layoutY="95.0" prefHeight="380.0" prefWidth="893.0">
              <columns>
                <TableColumn fx:id="num" maxWidth="1000.0" prefWidth="76.0" text="NUM" />
                <TableColumn fx:id="title" maxWidth="2500.0" prefWidth="369.0" text="TITLE" />
                  <TableColumn fx:id="name" maxWidth="2500.0" prefWidth="124.0" text="NAME" />
                  <TableColumn fx:id="date" prefWidth="112.0" text="DATE" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label layoutX="42.0" layoutY="14.0" text="후기게시판">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
              <TextField fx:id="searchText" layoutX="751.0" layoutY="31.0" prefHeight="26.0" prefWidth="135.0" />
            <JFXButton fx:id="searchBtn" layoutX="890.0" layoutY="31.0" onAction="#searchBtnClick" prefHeight="28.0" prefWidth="59.0" style="-fx-background-color: #FFE1E6;" text="검색">
           		<font>
                	<Font size="13.0" />
               </font></JFXButton>
            <ComboBox fx:id="searchSort" layoutX="621.0" layoutY="31.0" prefHeight="26.0" promptText="제목+내용" />
            <JFXButton layoutX="891.0" layoutY="543.0" onAction="#insertBtnClick" prefHeight="28.0" prefWidth="59.0" style="-fx-background-color: #FFE1E6;" text="글쓰기">
               <font>
                  <Font size="13.0" />
               </font>
            </JFXButton>
          </children>
      </AnchorPane>
   </center>
</BorderPane>
